<configuration>
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %highlight([%thread] [%level] [%logger{0}]) - %msg%n%throwable</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="console"/>
    </root>

    <!--
    <logger name="org.springframework" level="info" />
    <logger name="org.hibernate" level="info" />
    TestDispatcherServlet, RequestMappingHandlerMapping -->
</configuration>